require 'rake'
require 'rspec/core/rake_task'
require 'date'
require "open-uri"

@instanceId = URI.parse("https://169.254.169.254/latest/meta-data/instance-id/").read

task :spec    => 'spec:all'
task :default => :spec

namespace :spec do
  targets = []
  Dir.glob('./spec/*').each do |dir|
    next unless File.directory?(dir)
    target = File.basename(dir)
    target = "_#{target}" if target == "default"
    targets << target
  end

  task :all     => targets
  task :default => :all

  targets.each do |target|
    original_target = target == "_default" ? target[1..-1] : target
    timestamp = Time.now.strftime('%b-%d-%H-%M-%S')
    desc "Run serverspec tests to #{original_target}"
    RSpec::Core::RakeTask.new(target.to_sym) do |t|
      ENV['TARGET_HOST'] = original_target
      t.pattern = "spec/#{original_target}/*_spec.rb"
      t.fail_on_error = false
      t.rspec_opts = "--format documentation --format json --out spec/Reports/test_report.json.#{timestamp}.#{instanceId}"
    end
  end
end
